{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "backend/src",
    "outDir": "backend/dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["backend/src"]
}
