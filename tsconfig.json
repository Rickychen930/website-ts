{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "src/main.ts",
    "src/config",
    "src/controllers",
    "src/models",
    "src/routes",
    "src/types"
  ],
  "exclude": [
    "src/**/*.tsx",
    "src/**/*.jsx"
  ]
}
